{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "slepianok/docker-fibbonachi_client",
            "hostname": "client",
            "memory": 128,
            "essential": false
        },
        {
            "name": "backend",
            "image": "slepianok/docker-fibbonachi_backend",
            "hostname": "api",
            "memory": 128,
            "essential": false
        },
        {
            "name": "worker",
            "image": "slepianok/docker-fibbonachi_worker",
            "hostname": "worker",
            "memory": 128,
            "essential": false
        },
        {
            "name": "nginx",
            "image": "slepianok/docker-fibbonachi_nginx",
            "hostname": "nginx",
            "memory": 128,
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80, 
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]
        }
    ]
}